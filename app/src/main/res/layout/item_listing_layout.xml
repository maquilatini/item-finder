<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_listing_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/dark_purple"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_no_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_listing_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:maxLines="2"
        android:layout_marginEnd="20dp"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_listing_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Samsung Galaxy S23 Plus 8GB 256GB Lavander" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_semibold"
        android:maxLines="1"
        android:layout_marginEnd="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_listing_guideline"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        tools:text="$5.250" />

    <TextView
        android:id="@+id/condition_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="12dp"
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textColor="@color/purple_200"
        android:layout_marginEnd="20dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_listing_guideline"
        app:layout_constraintTop_toBottomOf="@id/price_text"
        tools:text="new" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_listing_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>